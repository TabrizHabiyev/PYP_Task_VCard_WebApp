@model IEnumerable<PYP_Task_VCard_WebApp.Models.VCard>

@{
    ViewData["Title"] = "Index";
}

<h1>VCard List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
          <div class="row">
           
             @foreach (var item in Model) {
                 <div class="col-md-4">
            <div class="card box-shadow" style="width: 18rem;">
                <img class="card-img-top" src="@item.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Firtname   @item.Surname </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Email :</b>  @item.Email</li>
                    <li class="list-group-item"><b>Phone :</b>  @item.Phone</li>
                    <li class="list-group-item"><b>Country :</b> @item.Country</li>
                    <li class="list-group-item"><b>City :</b>  @item.City</li>
                </ul>
                <div class="card-body">
                    <a class="card-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="card-link" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="card-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
               </div>
}  
           
            </div>
          </div>
        </div>

